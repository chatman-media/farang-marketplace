{
  "name": "@marketplace/database-schema",
  "version": "1.0.0",
  "description": "Shared database schema for Thailand Marketplace",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@marketplace/shared-types": "^1.0.0",
    "@marketplace/logger": "^1.0.0",
    "drizzle-orm": "^0.44.5",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/node": "24.3.1",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.9.2",
    "vitest": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "dotenv": "17.2.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./dist/schema.js"
    },
    "./connection": {
      "types": "./dist/connection.d.ts",
      "default": "./dist/connection.js"
    },
    "./migrations": {
      "types": "./dist/migrations.d.ts",
      "default": "./dist/migrations.js"
    }
  }
}
