# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/marketplace_payments
DB_HOST=localhost
DB_PORT=5432
DB_NAME=marketplace_payments
DB_USER=user
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# TON Blockchain Configuration
TON_NETWORK=testnet
TON_API_KEY=your-ton-api-key
TON_WALLET_MNEMONIC=your-wallet-mnemonic-phrase-here
TON_WALLET_ADDRESS=your-ton-wallet-address

# TON Connect Configuration
TON_CONNECT_MANIFEST_URL=https://your-domain.com/tonconnect-manifest.json
TON_CONNECT_BRIDGE_URL=https://bridge.tonapi.io/bridge

# Payment Configuration
PAYMENT_WEBHOOK_SECRET=your-webhook-secret-key
PAYMENT_CONFIRMATION_BLOCKS=3
PAYMENT_TIMEOUT_MINUTES=30

# External Services
BOOKING_SERVICE_URL=http://localhost:3002
USER_SERVICE_URL=http://localhost:3001
LISTING_SERVICE_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
