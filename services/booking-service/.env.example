# Server Configuration
PORT=3004
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/thailand_marketplace

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
USER_SERVICE_URL=http://localhost:3001
LISTING_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006

# Booking Configuration
BOOKING_ADVANCE_MIN_HOURS=1
BOOKING_ADVANCE_MAX_DAYS=365
BOOKING_CANCELLATION_HOURS=24
AUTO_CONFIRM_TIMEOUT_HOURS=24
PAYMENT_TIMEOUT_MINUTES=30

# TON Blockchain Configuration
TON_NETWORK=testnet
TON_WALLET_ADDRESS=your-ton-wallet-address
TON_PRIVATE_KEY=your-ton-private-key
TON_API_KEY=your-ton-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/booking-service.log
