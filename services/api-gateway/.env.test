# Test Environment Configuration
NODE_ENV=test
PORT=3000

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only-must-be-32-chars
JWT_EXPIRES_IN=1h

# Redis Configuration (use test database)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Rate Limiting (more lenient for tests)
RATE_LIMIT_WINDOW=60000   # 1 minute
RATE_LIMIT_MAX=10000      # high limit for tests
RATE_LIMIT_SKIP_SUCCESSFUL=true

# Security
HELMET_ENABLED=false      # disabled for easier testing
COMPRESSION_ENABLED=false

# Logging
LOG_LEVEL=silent          # suppress logs during tests
LOG_PRETTY=false

# Health Check (faster for tests)
HEALTH_CHECK_INTERVAL=5000   # 5 seconds
HEALTH_CHECK_TIMEOUT=1000    # 1 second

# Circuit Breaker (faster recovery for tests)
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT=1000  # 1 second

# Service Discovery
SERVICE_DISCOVERY_ENABLED=false

# Monitoring
METRICS_ENABLED=false

# Mock Service URLs for testing
USER_SERVICE_URL=http://localhost:3001
LISTING_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
BOOKING_SERVICE_URL=http://localhost:3004
AGENCY_SERVICE_URL=http://localhost:3005
AI_SERVICE_URL=http://localhost:3006
VOICE_SERVICE_URL=http://localhost:3007
CRM_SERVICE_URL=http://localhost:3008

# API Keys for testing
VALID_API_KEYS=test-key-1,test-key-2,test-key-3
