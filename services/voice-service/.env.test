# Test Environment Configuration
NODE_ENV=test
PORT=3007
HOST=localhost

# JWT Configuration
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=1h

# Mock Speech-to-Text Providers
GOOGLE_CLOUD_PROJECT_ID=test-project
GOOGLE_APPLICATION_CREDENTIALS=./test/mock-credentials.json
GOOGLE_SPEECH_API_KEY=test-google-key

AZURE_SPEECH_KEY=test-azure-key
AZURE_SPEECH_REGION=test-region

OPENAI_API_KEY=test-openai-key
OPENAI_ORGANIZATION=test-org

# Voice Service Settings
DEFAULT_LANGUAGE=en-US
SUPPORTED_LANGUAGES=th-TH,en-US,en-GB
MAX_AUDIO_FILE_SIZE=1048576
AUDIO_UPLOAD_PATH=./test/uploads
VOICE_COMMAND_TIMEOUT=1000

# AI Service Integration
AI_SERVICE_URL=http://localhost:3006
AI_SERVICE_API_KEY=test-ai-key

# Test Database
DATABASE_URL=postgresql://test:test@localhost:5432/voice_service_test

# Test Redis
REDIS_URL=redis://localhost:6379/1
REDIS_TTL=60

# Logging
LOG_LEVEL=error
LOG_FORMAT=simple
